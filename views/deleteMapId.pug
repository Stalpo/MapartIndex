doctype html
html(lang="en")
  include includes/head.pug
  body
    include includes/navbar.pug
    div.container.d-flex.align-items-center.justify-content-center
      div.col-md-8
        h1.text-center= pageTitle
        if !admin
          div.alert.alert-danger(role="alert")
            | You are not an administrator
        else
          if mapId
            div.alert.alert-warning(role="alert")
              p Are you sure you want to delete the file with Map ID: #{mapId}?
            form(action="/deleteMapId" method="POST")
              input(type="hidden" name="mapId" value=mapId)
              button.btn.btn-danger(type="submit") Confirm Deletion
          else
            div.alert.alert-info(role="alert")
              p No mapId provided.

    include includes/scripts.pug

