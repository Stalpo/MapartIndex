generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/client"
}

datasource db {
  provider = "mongodb"
  url      = process.env.DATABASE_URL
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  hashedPw  String
  mapIds    MapId[]
  mcUuid    String
  discordId String
  maps      MapArt[]
}

model MapId {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     User     @relation(fields: [id], references: [id], onDelete: Cascade)
  data      String   @unique
  imgUrl    String
  creator   String
  Map       MapArt?  @relation(fields: [mapId], references: [id], onDelete: Cascade)
  mapId     String?
}

model MapArt {
  id          String   @id @default(uuid()) @map("_id")
  creator     User     @relation(fields: [id], references: [id], onDelete: Cascade)
  mapIds      MapId[]
  rotations   Int[] // 0-3 rotation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  vSize       Int
  hSize       Int
}
